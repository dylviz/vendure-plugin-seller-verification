{
	"compilerOptions": {
		"lib": ["es2022"],
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2022",
		"strict": true,
		"sourceMap": false,
		"skipLibCheck": true,
		"types": ["node"],
		"declaration": true,
		"strictPropertyInitialization": false,
		"outDir": "./dist/",
		"baseUrl": "./"
	},
	"exclude": ["node_modules", "migration.ts", "src/ui", "**/admin-ui"],
	"ts-node": {
		"files": true
	},
	"include": ["types.d.ts","src/**/*.ts"]
}
